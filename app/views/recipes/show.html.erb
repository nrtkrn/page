  <div class="c_box__recipe a_flex">
    <div class="c_box__recipe_inner">
      <div class="c_box__title a_flex">
        <%= image_tag 'cake.jpg', size: '200x200', class:"c_photo__recipe_show" %>
        <div class="c_show">
          <h2>タイトル</h2>
          <h2>材料</h2>
